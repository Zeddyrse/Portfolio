{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">
            {{ message }}
        </div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
        <form action="{{ path ('app_login_connection') }}" method="post">
            <div class="form-group">
                <label for="username">Adresse Mail</label>
                <input type="email" class="form-control" id="username" aria-describedby="emailHelp" name="_username" placeholder="exemple@gmail" value="{{last_username}}">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="*******">
            </div>
            <button type="submit" class="mt-3 btn btn-primary">Connexion</button>
        </form>
    </div>
{% endblock %}
